generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
  name     String @db.VarChar(255)
  email    String @unique
  books    Book[]
}

model Book {
  id         String @id @default(cuid())
  name       String
  author     String
  totalPages Int
  pagesRead  Int
  cover      String
  location   String
  user       User   @relation(fields: [userId], references: [id])
  userId     String
}
